{
  "name": "permanente",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "electron:dev": "npm run build:electron && electron .",
    "dev": "concurrently \"npm start\" \"npm run electron:dev\"",
    "electron:prod": "npm run build && npm run build:electron && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.react-electron-ts",
    "files": [
      "build/**/*",
      "dist-electron/**/*"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  },
  "homepage": "./",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "@tanstack/react-table": "^8.20.6",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "cra-template-typescript": "1.2.0",
    "lucide-react": "^0.474.0",
    "motion": "^12.0.6",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.3",
    "react-scripts": "5.0.1",
    "recharts": "^2.15.0",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.12.0",
    "ajv": "^7.2.4",
    "concurrently": "^9.1.2",
    "electron": "^34.0.2",
    "electron-is-dev": "^3.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3"
  }
}